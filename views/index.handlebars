<h1>Eat-Da-Burger!</h1>
<div>
   <h4>Click the burger to CONSUME!</h4>
</div>
<main>
   <div class="container">
      <div class="row">
         <div class="col s6">
            {{#each burgers}}
            {{#unless this.devoured}}
            <div>

               {{!-- Using method put is outdated, but it works --}}
               <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                  <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
               </form>
            </div>
            {{/unless}}
            {{/each}}
         </div>

         <div class="col s6">
            {{#each burgers}}
            {{#if this.devoured}}
            <div class='burgerEaten'>
               <div>
                  {{this.burger_name}}
               </div>
            </div>
            {{/if}}
            {{/each}}
         </div>
      </div>
   </div>
</main>

<h2>Add a Burger Expoloit</h2>

<div class="row">
   <div class="col s12">
      <form action="/burgers" method="POST">
         <input type="text" id="name" name="burger_name" placeholder="That is a tasty Burger!">
         <button type="submit" class="addBurgerButton">Compile Burger.cpp</button>
      </form>
   </div>
</div>